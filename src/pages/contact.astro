---
import CommanButton from "../components/commanButton/CommanButton";
import Input from '../components/input/Input.astro';
import InteriorContent from "../components/interiorContent/InteriorContent.astro";
import InteriorHero from "../components/interiorHero/InteriorHero.astro";
import TextArea from '../components/textArea/TextArea.astro';
import DefaultLayout from "../layouts/Default.astro";
---

<DefaultLayout>
    <InteriorHero>
        <p class="uppercase font-extrabold text-center text-zinc-500 tracking-wider">Let's Talk</p>
        <h1 class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-center mt-4">Contact US</h1>
        <p class="text-center text-xl md:text-2xl mt-6 max-w-xl mx-auto text-zinc-400">we are always looking for talented individuals passionate about building blockchain products that make a difference</p>
    </InteriorHero>

    <InteriorContent>
        <div class="pb-[1000px] max-w-xl mx-auto">
            <h2 class="font-heading font-black text-3xl">What can you help with ?</h2>

            <form class="flex flex-col mt-8" name="contact" method="POST" data-netlify="true">
                <label for="name">Name</label>
                 <Input type="text" name="name" id="id" class="mt-1" />
             
                    <label for="email" class="mt-4">Email</label>
                <Input type="email" name="email" id="email" class="mt-1"/>
                
                <label for="message" class="mt-4">Message</label>
                <TextArea name="message" id="message" class="mt-1"/>
                <CommanButton className="mt-4">Send Button</CommanButton>
            </form>
        </div>
    </InteriorContent>
</DefaultLayout>